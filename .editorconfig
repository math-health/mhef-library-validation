# Top-most EditorConfig file
root = true

# Unix-style newlines without a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 4
insert_final_newline = false

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = tab
indent_size = 2